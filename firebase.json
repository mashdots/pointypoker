{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "auth": {
      "port": 4002
    },
    "firestore": {
      "port": 4001
    },
    "hosting": {
      "port": 4003
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true
  }
}
